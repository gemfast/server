{{ define "gems/data" }}
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#" hx-get="http://localhost:2020/ui/gems" hx-target="#content" hx-push-url=true>Gem Sources</a></li>
    <li class="breadcrumb-item"><a href="#" hx-get="http://localhost:2020/ui/gems/{{ .source }}/prefix" hx-target="#content" hx-push-url=true>{{ .source }}</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ .prefix }}</li>
  </ol>
</nav>
<br>
<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col" style="font-size: x-large; text-decoration: underline;">Name</th>
    </tr>
  </thead>
  <tbody>
  {{ range .gems }}
    <tr>
      <td hx-get="http://localhost:2020/ui/gems/{{ $.source }}/prefix/{{ $.prefix }}/inspect/{{ . }}" hx-target="#content" hx-push-url=true><strong>{{ . }}/</strong></td>
    </tr>
  {{ end }}
  </tbody>
</table>
{{ end }}
