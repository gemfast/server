{{ define "gems/prefix" }}
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#" hx-get="http://localhost:2020/ui/gems" hx-target="#content">Gem Sources</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ .source }}</li>
  </ol>
</nav>
<br>
<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col" style="font-size: x-large; text-decoration: underline;">Prefix</th>
    </tr>
  </thead>
  <tbody>
    {{ range $key, $value := .dirs }}
    <tr>
      <td hx-get="http://localhost:2020/ui/gems/{{ $.source }}/prefix/{{ $key }}" hx-target="#content" hx-push-url=true><strong>{{ $key }}/ ( {{ $value }} )</strong></td>
    </tr>
    {{ end }}
  </tbody>
</table>
{{ end }}
